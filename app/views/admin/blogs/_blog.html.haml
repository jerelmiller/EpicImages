.blog
  = link_to blog.title, edit_admin_blog_path(blog)
  %span.time= format_time blog.created_at
  .actions.right
    = link_to edit_admin_blog_path(blog) do
      %span.icon24.edit
    = link_to admin_blog_path(blog), method: :delete, 'data-confirm' => 'Are you sure you want to delete this blog?'do
      %span.icon24.cross.red