= form_for [:admin, @photo], html: { multipart: true } do |f|
  = render 'layouts/flash', flash: flash
  .input
    %label Choose Photo
    = f.file_field :image
  .input
    %label Title
    = f.text_field :caption, class: 'inputIcon'
    %label.icon.inputIcon.bubble
  .input
    %label Tags
    #tagsInput
  .input.checkbox
    = f.check_box :featured_flag
    %label Featured
  .submit
    = save_button
    = link_to_cancel admin_photos_path