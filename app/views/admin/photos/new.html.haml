%section
  %h2.sectionTitle
    %span.icon24.plus
    Add a new photo
  = render 'form'

:javascript
  var tags = new EpicImages.Collections.Tags(
    #{render(partial: 'tags/tags', locals: { tags: @tags }, formats: [:json])}
  );

  var tagSelectionView = new EpicImages.Views.TagInput({
    el: '#tagsInput',
    collection: tags
  });

  tagSelectionView.render();